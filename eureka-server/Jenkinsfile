pipeline {
    environment {
        registry = "davisballen/scandit_eureka"
        registryCredential = 'dockerhub'
    }
    agent {
        docker {
            image 'maven:3.6.2-jdk-8'
            args ' -v /tmp/.m2:/tmp/.m2'
        }
    }
    stages {
        stage('Build') {
            steps {
                dir("eureka-server/") {
                    sh 'echo $USER'
                }
            }

        }
        stage('Deliver') {
            steps {
                dir("eureka-server/") {
                    script {
                        docker.build registry + ":0.0.1-SNAPSHOT"
                    }
                }
            }
        }
    }
}
