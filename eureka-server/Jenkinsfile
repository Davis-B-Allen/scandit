pipeline {
    environment {
        registry = "davisballen/scandit_eureka"
        registryCredential = 'dockerhub'
    }
    agent {
        docker {
            image 'maven:3.6.2-jdk-8'
            args ' --privileged -v /tmp/.m2:/tmp/.m2 -v /usr/bin/docker:/usr/bin/docker'
        }
    }
    stages {
        stage('Deliver') {
            steps {
                dir("eureka-server/") {
                    script {
                        docker.build registry + ":0.0.1-SNAPSHOT"
                    }
                }
            }
        }
    }
}
