pipeline {
    agent {
        docker {
            image 'maven:3.6.2-jdk-8'
            args ' -v /tmp/.m2:/tmp/.m2'
        }
    }
    stages {
        stage('Build') {
            steps {
                dir("eureka-server/") {
                    sh 'mvn -B -DskipTests -Dspring.profiles.active=pcf,global clean package'
                }
            }

        }
        stage('Test') {
            steps {
                dir("eureka-server/") {
                    sh 'mvn test'
                }
            }
        }
        stage('Deliver') {
            steps {
                dir("eureka-server/") {
                    sh 'docker images'
                }
            }
        }
    }
}
