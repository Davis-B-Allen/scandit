pipeline {
    agent {
        docker {
            image 'maven:3-alpine'
            args ' -v /tmp/.m2:/tmp/.m2'
        }
    }
    stages {
        stage('Build') {
            steps {
                dir("eureka-server/") {
                    sh 'mvn -B -DskipTests -Dspring.profiles.active=pcf,global clean package'
                }
            }
        }
    }
}